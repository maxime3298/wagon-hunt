      <%= simple_form_for @product do |f| %>
      <%= f.input :name, placeholder:"Kudoz", label:"Which product?" %>
      <%= f.input :url, placeholder:"http://kudoz.com", label:"Which url?" %>
      <%= f.input :tagline, placeholder:"The app that rocks", label:"Which tagline?" %>
      <%= f.input :category, collection: ["tech", "education", "design"], prompt: "Which category?" %>
      <%= f.button :submit, "Submit", class:"btn btn-primary" %>

      <% end %>
